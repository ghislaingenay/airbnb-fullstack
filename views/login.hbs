<div class="login">
  <div class=" position-absolute top-50 start-50 translate-middle">
    <form action="">
      <div class="card p-4 text-start" style="width: 30rem;">
        <img class="mx-auto mb-4" src="/images/logo-airbnb.png" alt="Airbnb logo" width="100px">
        <div class="card-body">
          <h6 class="mb-1">Email address</h6>
          <input type="email" name="login-email" class="form-control mb-2" placeholder="name@example.com">
          <h6 class="mb-1">Password</h6>
          <input type="password" name="login-password" class="form-control mb-2">
          <button type="submit" name="login" class="btn btn-success mt-3">Login</button>
          <h6 class="signup mt-3">New to Airbnb <a href="/auth/signup">Sign up</a></h6>
        </div>
      </div>
    </form>
  </div>
</div>