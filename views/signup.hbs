<div class="login">
  <div class="position-absolute top-50 start-50 translate-middle">
    <form action="/auth/signup" width="50%" method="POST">
      <div class="card p-4 text-start" style="width: 30rem;">
        <img class="mx-auto mb-4" src="/images/logo-airbnb.png" alt="Airbnb logo" width="100px">
        <div class="card-body">
          <h6 class="mb-1">Your full name</h6>
          <input type="text" name="fullname" class="form-control mb-2">
          <h6 class="mb-1">Profile picture</h6>
          <input type="text" name="picture" class="form-control mb-2">
          <h6 class="mb-1">Email address</h6>
          <input type="email" name="email" class="form-control mb-2" placeholder="name@example.com">
          <h6 class="mb-1">Password</h6>
          <input type="password" name="password" class="form-control mb-2">
          <button type="submit" class="btn btn-success mt-3">Sign up</button>
          <h6 class="signup mt-3">Have already an account <a href="/auth/login">Login</a></h6>
        </div>
      </div>
    </form>
  </div>
</div>